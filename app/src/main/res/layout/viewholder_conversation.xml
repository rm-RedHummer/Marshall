<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vhConvo_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vhConvo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Tony Stark"
        android:textColor="@color/material_grey_800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vhConvo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="4dp"
        android:text="3/18/18"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/vhConvo_name"
        app:layout_constraintStart_toEndOf="@+id/vhConvo_name" />

    <TextView
        android:id="@+id/vhConvo_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:text=", 5:00pm"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/vhConvo_name"
        app:layout_constraintStart_toEndOf="@+id/vhConvo_date" />

    <TextView
        android:id="@+id/vhConvo_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:text="Hello po ser open minded po ba kayo asdhuas hi reym djsikj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhConvo_name" />

    <ImageView
        android:id="@+id/vhConvo_circle"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhConvo_message"
        app:srcCompat="@color/material_grey_300" />
</android.support.constraint.ConstraintLayout>
