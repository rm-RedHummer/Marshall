<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/vhMessage_leftMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/material_grey_300"
        android:padding="8dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:text="Hello"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/vhMessage_leftMsgDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="2/30/18"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhMessage_leftMessage" />

    <TextView
        android:id="@+id/vhMessage_leftMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", 3:00am"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/vhMessage_leftMsgDate"
        app:layout_constraintTop_toBottomOf="@+id/vhMessage_leftMessage" />

    <TextView
        android:id="@+id/vhMessage_rightMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/material_grey_300"
        android:padding="8dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:text="Hi"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <TextView
        android:id="@+id/vhMessage_rightMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text=", 3:00am"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vhMessage_rightMessage" />

    <TextView
        android:id="@+id/vhMessage_rightMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/30/18"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/vhMessage_rightMsgTime"
        app:layout_constraintTop_toBottomOf="@+id/vhMessage_rightMessage" />

</android.support.constraint.ConstraintLayout>
