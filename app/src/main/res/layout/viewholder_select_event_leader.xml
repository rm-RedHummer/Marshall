<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vhSelectEventLeader_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@color/material_grey_200" />

    <TextView
        android:id="@+id/vhSelectEventLeader_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tony Stark"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/vhSelectEventLeader_RadioBtn"
        app:layout_constraintStart_toEndOf="@+id/vhSelectEventLeader_RadioBtn"
        app:layout_constraintTop_toTopOf="@+id/vhSelectEventLeader_RadioBtn"
        app:layout_constraintVertical_bias="0.333" />

    <RadioButton
        android:id="@+id/vhSelectEventLeader_RadioBtn"
        style="@android:style/Widget.CompoundButton.RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
